<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <!--if clicked-->
  <item android:state_pressed="true" >
    <shape>
        <!--background-->
      <solid
          android:color="#449def" />
        <!--테두리 -->
        <stroke
          android:width="1dp"
          android:color="#2f6699" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
    <!--if not clicke-->
  <item>
    <shape>
      <gradient
          android:startColor="#449def"
          android:endColor="#2f6699"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#2f6699" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>
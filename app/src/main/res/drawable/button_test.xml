<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#E2E2E2" />
      <stroke
          android:width="1dp"
          android:color="#969696" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
      <corners android:radius="10dp" />  
    </shape>
  </item>
  <item>
    <shape>
      <solid
          android:startColor="#000000" />
      <stroke
          android:width="1dp"
          android:color="#969696" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
      <corners android:radius="10dp" />  
    </shape>
  </item>
</selector>